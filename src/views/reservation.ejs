<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservation | Cava & Corte</title>
    <link rel="stylesheet" href="../public/css/syleReservations.css">
</head>
<body>
    <!-- Incluyendo el partial del navbar -->
    <%- include('../views/partials/navbar.ejs')%>

    <section id="reservation-section" class="section active">
        <form action="./reservation" class="reservationForm" method="post">
            <div class="formSection">
                <label for="listaPlatillos">Entrada</label>
                <select name="Entrada" id="" required>
                    <option value="" class="listaOpcion" selected>Selecciona un platillo</option>
                    <% if(products){%>
                        <% products.forEach(entrada => { %>
                            <option value="<%= entrada.id_producto%>" class="listaOpcion"> <%= entrada.nombre_producto %> </option>
                        <% }); %>
                    <% }%>
                </select>
            </div>
            <div class="formSection">
                <label for="listaMesas">Mesa</label>
                <select name="Mesa" id="" required>
                    <option value="" class="listaOpcion" selected>Selecciona una mesa</option>
                    <% if(tables){%>
                        <% tables.forEach(table =>{ %>
                            <option value="<%= table.id_mesa %>" class="listaOpcion"> Mesa <%= table.id_mesa%> - ( <%= table.tamaÃ±o_mesa %> personas) </option>
                        <% }) %>
                    <% }%>
                </select>
            </div>
            <div class="formSection">
                <label for="fecha">Fecha</label>
                <input type="date" id="fecha" name="fecha" required>
            </div>
            <div class="formSection">
                <label for="hora">Hora</label>
                <input type="time" id="hora" name="hora" min="17:00" max="23:00" required>
            </div>
            <input type="submit" id="btnSubmit" value="Confirmar reserva">
            <% if(message) {%>
                <span> <%= message %> </span>
            <% } %>
        </form>
    </section>
    <script src="../public/js/reservation.js"></script>
</body>
</html>




