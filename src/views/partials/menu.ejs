<!-- Partial del esquema para mostrar los platillos en los menus -->

<% if (items && items.length > 0) { %>
    <% items.forEach(platillo => { %>
        <div class="menu-platillo">
            <div class="menu-platillo-conjunto">

                <!-- Imagen del platillo -->
                <img src="/public/imgs/menu/platillos/<%= platillo.ruta_imagen %>" 
                     alt="<%= platillo.nombre_platillo %>"
                     class="platillo-img">

                <div class="menu-platillo-info">
                    <!-- Nombre del platillo -->
                    <span class="platillo-title"><%= platillo.nombre_platillo %></span>

                    <!-- Ingredientes / descripciÃ³n -->
                    <span class="platillo-ingredients"><%= platillo.descripcion_platillo %></span>
                </div>
            </div>

            <!-- Precio -->
            <span class="platillo-precio">$<%= platillo.precio_platillo %></span>
        </div>
    <% }) %>
<% } else { %>
    <p class="no-items">No hay platillos disponibles.</p>
<% } %>

