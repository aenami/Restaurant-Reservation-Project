<!-- Partial del esquema para mostrar los platillos en los menus -->

<% if (products && products.length > 0) { %>
    <% products.forEach(product => { %>
        <div class="menu-platillo">
            <div class="menu-platillo-conjunto">

                <!-- Imagen del platillo -->
                <img src="/public/imgs/menu/platillos/<%= product.ruta_imagen %>" 
                     alt="<%= product.nombre_producto %>"
                     class="platillo-img">

                <div class="menu-platillo-info">
                    <!-- Nombre del platillo -->
                    <span class="platillo-title"><%= product.nombre_producto %></span>

                    <!-- Ingredientes / descripciÃ³n -->
                    <span class="platillo-ingredients"><%= product.descripcion_producto %></span>
                </div>
            </div>

            <!-- Precio -->
            <span class="platillo-precio">$<%= product.precio_producto%></span>
        </div>
    <% }) %>
<% } else { %>
    <p class="no-items">No hay platillos disponibles.</p>
<% } %>

